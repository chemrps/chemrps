version: '2.1'

services:

    database:
     build:
      context: ./database
      dockerfile: Dockerfile
      
     
     ports:
            - "5432:${DATABASEPORT}"
     
     volumes:
            - database-volume:/pgdata/data
      
    web:
        build:
         context: ./chemrpsweb
         dockerfile: Dockerfile
        
        
        
        ports:
            - "${WEBPORT}:80"
        
        
        
        volumes_from:
         - php
        
        
       
        depends_on:
         - php
        
                    
    php:
        build:
          context: ./php
          dockerfile: Dockerfile
        
        
        
        
        volumes:
         - /code
         
         - sdfilefolder:/sdfilefolder
        
    
    
         
    
        
      
    
             
    api:
        build:
          context: ./chemrpsapi
          dockerfile: Dockerfile
        
        ports:
            - "5003:5003"
        
        volumes:
          - sdfilefolder:/sdfilefolder
volumes:
 database-volume:
      
 sdfilefolder:
      
      
       
    
    
             


     
      
